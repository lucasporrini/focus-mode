{
  "manifest_version": 3,

  "name": "Focus Mode",
  "description": "Bloque les sites distrayants pendant les p√©riodes de focus",
  "version": "1.0.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },

  "permissions": ["storage", "tabs", "activeTab", "scripting", "webNavigation"],

  "host_permissions": ["<all_urls>"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
